<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ReadorderbyDatabaseActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/read_orderby_database-spiner_direction"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:entries="@array/orderby"></Spinner>

        <Spinner
            android:id="@+id/read_orderby_database-spiner_age_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:entries="@array/age"></Spinner>

        <Spinner
            android:id="@+id/read_orderby_database-spiner_age_end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:entries="@array/age"></Spinner>

        <Spinner
            android:id="@+id/read_orderby_database-spiner_limit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:entries="@array/limit"></Spinner>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/read_orderby_database_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
</LinearLayout>